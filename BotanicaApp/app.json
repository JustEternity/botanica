{
  "expo": {
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложение использует ваши фото, чтобы вы могли делиться ими с друзьями."
        }
      ],
      "expo-router"
    ],
    "name": "Botanica",
    "slug": "botanica",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a1f0a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.botanica.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a1f0a"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ],
      "package": "com.botanica.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Botanica - Кафе Кальянная",
      "shortName": "Botanica",
      "lang": "ru",
      "scope": "/",
      "backgroundColor": "#0a1f0a",
      "themeColor": "#0a1f0a",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "portrait",
      "bundler": "metro"
    },
    "entryPoint": "App.tsx",
    "scheme": "botanica",
    "extra": {
      "API_BASE_URL": "http://45.153.189.245:3001/api",
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}